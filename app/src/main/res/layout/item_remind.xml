<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bg_white_corner_80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/remindInfo_date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/background_gray"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/remindInfo_data_tips"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/background_gray"
            android:textSize="22sp"
            android:text="@string/reminds_data_tips_today"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_white_corner_75"
        android:id="@+id/linear_remind_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

    </LinearLayout>

</LinearLayout>