<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/remind_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/icon_remind" />

    <TextView
        android:id="@+id/remind_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/remind_time"
        android:layout_toRightOf="@id/remind_icon"
        android:textColor="@color/background_gray"
        android:textSize="20sp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/remind_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:singleLine="true"
        android:textColor="@color/background_gray"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>